package common {	import flash.display.*;	import flash.events.*;		public class ListTypeBtn extends Sprite {		static public const TEXT_CLICKED = "LISTTYPE_TEXT";		static public const THUMB_CLICKED = "LISTTYPE_THUMB";		private var m_leftClickObj:Sprite;		private var m_rightClickObj:Sprite;		//private var m_listType:String = "";				public function ListTypeBtn() {						m_leftClickObj = Sprite( addChild( new Sprite()));			m_leftClickObj.graphics.beginFill( 0, 0);			m_leftClickObj.graphics.drawRect( 0, 0, m_leftBaseOn.width, m_leftBaseOn.height);			m_leftClickObj.graphics.endFill();			m_rightClickObj = Sprite( addChild( new Sprite()));			m_rightClickObj.graphics.beginFill( 0, 0);			m_rightClickObj.graphics.drawRect( 0, 0, m_rightBaseOn.width, m_rightBaseOn.height);			m_rightClickObj.graphics.endFill();			m_rightClickObj.x = m_rightBaseOn.x;						m_leftBaseOn.visible = m_leftBaseOver.visible = false;			m_rightBaseOn.visible = m_rightBaseOver.visible = false;			 		}		//public function getListType() :String { return m_listType;}				public function setEnabled( b:Boolean):void {			buttonMode = b;			if( b) {				m_leftClickObj.addEventListener( MouseEvent.ROLL_OVER, onRollOverLeft);				m_leftClickObj.addEventListener( MouseEvent.ROLL_OUT, onRollOutLeft);				m_leftClickObj.addEventListener( MouseEvent.CLICK, onClickThumb);				m_rightClickObj.addEventListener( MouseEvent.ROLL_OVER, onRollOverRight);				m_rightClickObj.addEventListener( MouseEvent.ROLL_OUT, onRollOutRight);				m_rightClickObj.addEventListener( MouseEvent.CLICK, onClickText);			} else {				m_leftClickObj.removeEventListener( MouseEvent.ROLL_OVER, onRollOverLeft);				m_leftClickObj.removeEventListener( MouseEvent.ROLL_OUT, onRollOutLeft);				m_leftClickObj.removeEventListener( MouseEvent.CLICK, onClickThumb);				onRollOutLeft();				m_rightClickObj.removeEventListener( MouseEvent.ROLL_OVER, onRollOverRight);				m_rightClickObj.removeEventListener( MouseEvent.ROLL_OUT, onRollOutRight);				m_rightClickObj.removeEventListener( MouseEvent.CLICK, onClickText);				onRollOutRight();			}		}		public function onClickThumb( e:MouseEvent = null) {			m_leftBaseOn.visible = true;			m_leftBaseOver.visible = false;			m_rightBaseOn.visible = false;			if( e != null) dispatchEvent( new Event( THUMB_CLICKED));			//m_listType = THUMB_CLICKED;		}		function onRollOverLeft( e:MouseEvent) {			if( m_leftBaseOn.visible) return;			m_leftBaseOver.visible = true;		}		function onRollOutLeft( e:MouseEvent = null) {			if( m_leftBaseOn.visible) return;			m_leftBaseOver.visible = false;		}		public function onClickText( e:MouseEvent = null) {			m_rightBaseOn.visible = true;			m_rightBaseOver.visible = false;			m_leftBaseOn.visible = false;			if( e != null) dispatchEvent( new Event( TEXT_CLICKED));			//m_listType = TEXT_CLICKED;		}		function onRollOverRight( e:MouseEvent) {			if( m_rightBaseOn.visible) return;			m_rightBaseOver.visible = true;		}		function onRollOutRight( e:MouseEvent = null) {			if( m_rightBaseOn.visible) return;			m_rightBaseOver.visible = false;		}	}}