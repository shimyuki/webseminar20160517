package window {	import flash.display.*;	import flash.geom.*;	import flash.text.TextField;		// タイトルバーコンテンツ	public class TitleBarContents extends Sprite {				private const PAD = 5;				public function TitleBarContents() {		}				public function addContents( contents, posiX = null) {			var posi_x:Number = 0;			if( width != 0) posi_x = width + PAD;			addChild( contents);			contents.x = posiX == null ? posi_x : posiX;			contents.y = ( TitleBar.H - contents.height) / 2;		}		public function changeTextIfContentsIsText( str:String) {			var child = getChildAt( 0) as TextField;			if( child) {				child.text = str;			}		}	}}