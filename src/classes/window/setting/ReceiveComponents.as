package window.setting {	import flash.display.*;	import common.*;	import window.*;	import flash.events.*;	import flash.text.*;	import fl.controls.Slider;	import fl.events.SliderEvent;		// 環境設定の受講生の設定用コンポーネントセット	// 講師映像の受信設定	public class ReceiveComponents extends Sprite {		private const LABEL_BUFFER_TIME = Main.LANG.getParam( "講師映像表示のバッファ時間");				private var m_bufferTime_text:TextField;		private var m_bufferTime_slider:Slider;				public function ReceiveComponents() {			var label_bufferTime4rcvLec:TextField = TextField( addChild( new TextField()));			label_bufferTime4rcvLec.autoSize = TextFieldAutoSize.LEFT;			label_bufferTime4rcvLec.defaultTextFormat = new TextFormat( Main.CONF.getMainFont(), 11, 0x333333);			label_bufferTime4rcvLec.text = LABEL_BUFFER_TIME;						m_bufferTime_slider = Slider( addChild( new Slider()));			m_bufferTime_slider.maximum = 10;			m_bufferTime_slider.minimum = 0;			m_bufferTime_slider.snapInterval = 0.1;			m_bufferTime_slider.setSize( 100, 20);			m_bufferTime_slider.x = label_bufferTime4rcvLec.x + label_bufferTime4rcvLec.width + 10;			m_bufferTime_slider.y = 5;			m_bufferTime_text = TextField( addChild( new TextField()));			//m_bufferTime_text.type = TextFieldType.INPUT;			//m_bufferTime_text.border = true;			//m_bufferTime_text.borderColor = 0x555555;			var fmt:TextFormat = new TextFormat( Main.CONF.getMainFont(), 10, 0x333333);			//fmt.leftMargin = 1;			m_bufferTime_text.defaultTextFormat = fmt;			m_bufferTime_text.text = String( m_bufferTime_slider.value) + " sec";			m_bufferTime_text.width = 50;			m_bufferTime_text.height = m_bufferTime_text.textHeight + 4;			m_bufferTime_text.x = m_bufferTime_slider.x + m_bufferTime_slider.width + 5;			//m_bufferTime_text.restrict = ".0-9";			m_bufferTime_slider.addEventListener(SliderEvent.CHANGE, function( e:*){												m_bufferTime_text.text = String( m_bufferTime_slider.value) + " sec"; 												 });		}						// SettingContentsより適用ボタンクリック時によばれる		public function checkInputData() :String {			var errMsg:String = "";			// 必須項目は無いから、エラーはない						return errMsg; // 戻り値が空以外の場合、適用はキャンセルされる。		}				// MainのonStuReceiveSettingChangedから呼ばれる		public function getBufferTime() : Number {			return m_bufferTime_slider.value;		}				// Main経由でSettingContents or MemberSettingContentsから呼ばれる		public function setBufferTime( buffer_time: Number) {			m_bufferTime_slider.value = buffer_time;			m_bufferTime_text.text = String( m_bufferTime_slider.value);		}	}}