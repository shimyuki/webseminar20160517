package window.setting {	import flash.display.*;	import common.*;	import window.*;	import flash.events.MouseEvent;	import flash.events.Event;		// 環境設定の受講生の権限設定用コンポーネントセット	public class AuthorityComponents extends Sprite {		static public const H:Number = 50;		private const LABEL_CAMERA = Main.LANG.getParam( "映像");		private const LABEL_MIC = Main.LANG.getParam( "音声");		private const LABEL_WB = Main.LANG.getParam( "ホワイトボード書き込み権限");		private const LABEL_DOC = Main.LANG.getParam( "資料の自由閲覧権限");						public function AuthorityComponents() {			m_camChk.label = LABEL_CAMERA;			m_micChk.label = LABEL_MIC;			m_wbChk.label = LABEL_WB;			m_docChk.label = LABEL_DOC;			//m_evictedChk.label = LABEL_EVICTED;						// チェックボックスのラベルのサイズを文字長さに合わせる			m_camChk.width = m_camChk.textField.textWidth + 50;			m_micChk.width = m_micChk.textField.textWidth + 50;			m_wbChk.width = m_wbChk.textField.textWidth + 50;			m_docChk.width = m_docChk.textField.textWidth + 50;			m_evictedChk.width = m_evictedChk.textField.textWidth + 50;						m_volume.x = m_micChk.width;			m_wbChk.x = m_docChk.x = m_volume.x + m_volume.width + 50;			m_evictedChk.x = m_wbChk.x + m_wbChk.width + 30;						m_volume.maximum = 1;			m_volume.minimum = 0;			m_volume.snapInterval = 0.01;			m_volume.value = 0.5;						m_volume.visible = false; // できないっぽいので非表示に			m_evictedChk.visible = false; // 使わないらしいので非表示に		}				// 選択状態を設定		public function init( memberDataHash:Object) {			if( memberDataHash == null) return;			var obj:Object;			var i:uint;						m_camChk.selected = memberDataHash.video == Member.STATUS_ON ? true : false; // 映像			m_micChk.selected = memberDataHash.mic == Member.STATUS_ON ? true : false; // 音声			m_wbChk.selected = memberDataHash.whiteboard == Member.STATUS_ON ? true : false; // ホワイトボード			m_docChk.selected = memberDataHash.read == Member.STATUS_ON ? true : false; // 資料			m_evictedChk.selected = memberDataHash.evicted == Member.STATUS_ON ? true : false; // 強制退去						m_volume.value = memberDataHash.volume; // ボリューム								}				// SettingContentsより適用ボタンクリック時によばれる		public function checkInputData() :String {			var errMsg:String = "";			// 必須項目は無いから、エラーはない						return errMsg; // 戻り値が空以外の場合、適用はキャンセルされる。		}				// SettingContentsのsaveStuStream()[予定ね]やMemberContentsのsave01から、SOの変更用に呼ばれる		// 現在の選択状態をmemberDataHashの形にして返す。		public function getHash() : Object {			var hash:Object= new Object();			hash.video = m_camChk.selected ? 1 : 0;			hash.mic = m_micChk.selected ? 1 : 0;			hash.whiteboard = m_wbChk.selected ? 1 : 0;			hash.read = m_docChk.selected ? 1 : 0;			hash.evicted = m_evictedChk.selected ? 1 : 0;			hash.volume = m_volume.value;			return hash;		}	}}