package window {	import flash.display.*;	import flash.geom.*;		// サイズ変更可能コンテナ	public class ResizableContainer extends Sprite {		public var MIN_W:Number;		public var MIN_H:Number;		public var MAX_W:Number;		public var MAX_H:Number;		private var m_baseColor:uint;		protected var m_base:Shape;		public function ResizableContainer( w:Number, h:Number, min_w:Number, min_h:Number, baseColor:uint = 0xffffff) {			MIN_W = min_w;			MIN_H = min_h;			//MAX_W = max_w;			//MAX_H = max_h;			m_baseColor = baseColor;						// ベース			m_base = new Shape();			m_base.graphics.beginFill( m_baseColor);			m_base.graphics.drawRect( 0, 0, w, h);			m_base.graphics.endFill();			/*			m_base.graphics.lineStyle( 1, borderColor, 1, false, LineScaleMode.NONE);			m_base.graphics.lineTo( w, 0);			m_base.graphics.lineTo( w, h);			m_base.graphics.lineTo( 0, h);			m_base.graphics.lineTo( 0, 0);			*/			addChild( m_base);		}				public function getViewWidth():Number {			return m_base.width;		}		public function getViewHeight():Number {			return m_base.height;		}		public function setViewWidth( w:Number, debug:String = ""):void {			var h = m_base.height;			m_base.graphics.clear();			m_base.graphics.beginFill( m_baseColor);			m_base.graphics.drawRect( 0, 0, w, h);			m_base.graphics.endFill();		}		public function setViewHeight( h:Number):void {			var w = m_base.width;			m_base.graphics.clear();			m_base.graphics.beginFill( m_baseColor);			m_base.graphics.drawRect( 0, 0, w, h);			m_base.graphics.endFill();		}				public function setEnabled( b:Boolean):void {		}			}}