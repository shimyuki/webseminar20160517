package window.quicklist {	import flash.display.*;	// 受講生クイック一覧のステータス表示アイコン（ハイor出席or欠席）	public class StatusIcon extends Sprite {		private var m_here;		private var m_absence;		private var m_absenceOut:IconAbsenceOut;		private var m_attend;		private var m_cnt:uint = 0;								public function StatusIcon() {			m_here = addChild( Main.LANG.getIconHere());			m_absence = addChild( Main.LANG.getIconAbsence());			m_absenceOut = IconAbsenceOut( addChild( new IconAbsenceOut()));			m_attend = addChild( Main.LANG.getIconAttend());		}				// ハイ		public function here() {			m_here.visible = true;			m_absence.visible = false;			m_absenceOut.visible = false;			m_attend.visible = false;			if( Main.CONF.isPro( Main.CONF.UID)) buttonMode = true;			m_cnt++;		}		// 欠席		public function absence() {			m_here.visible = false;			m_absence.visible = m_cnt == 0 ? true : false;			m_absenceOut.visible = m_cnt == 0 ? false : true;			m_attend.visible = false;			buttonMode = false;			m_cnt++;		}		// 出席		public function attend() {			m_here.visible = false;			m_absence.visible = false;			m_absenceOut.visible = false;			m_attend.visible = true;			buttonMode = false;			m_cnt++;		}	}}