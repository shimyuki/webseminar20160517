package window.whiteboard.slide {	import flash.display.*;	import flash.geom.*;	import common.*;	import window.*;	import window.whiteboard.Whiteboard;	import window.whiteboard.WhiteboardContainer;	import flash.text.*;	import flash.events.*;	import flash.net.*;		// ホワイトボードに表示する１枚のスライド	public class PlainWbSlide extends WbSlide {		private var m_whiteBase:Shape;		public function PlainWbSlide( bgtype:String, color:uint) {			super( bgtype);						// 無地スライドが左上揃え（Whiteboard:onScaleChanged()）の場合、左上の指標としてbgに見えない□を描く			if( Whiteboard.POSITIONING[ WhiteboardContainer.BGTYPE_PLAIN] == "lefttop") {				m_bg.graphics.beginFill( 0xffffff);				m_bg.graphics.drawRect( 0, 0, 1, 1);				m_bg.graphics.endFill();			}						m_whiteBase = Shape( addChild( new Shape()));						m_whiteBase.graphics.clear();			m_whiteBase.graphics.beginFill( 0xffffff, 0);			m_whiteBase.graphics.drawRect( 0, 0, 5, 5);			m_whiteBase.graphics.endFill();		}						// WhiteboardContainer経由でWhiteboardからも呼ばれる		override public function unsetBg() {			super.unsetBg();		}				// WhiteboardContainer経由でWhiteboardからSharedObjectの値変更時に呼ばれる		override public function setBg() {			super.setBg();			dispatchEvent( new Event( WbSlide.BG_COMPLETE));		}							}}