package window.whiteboard.imgdoc {    import flash.display.*;	import flash.events.*;	import flash.geom.*;	import flash.filters.*;		public class InsertLine extends Sprite {		private var m_filter:GradientGlowFilter;		private var m_color:uint;		private var W:Number = 1;		public function InsertLine( color:uint) {			m_color = color;						var distance:Number  = 0;			var angleInDegrees:Number = 45;			var colors:Array     = [0xf2f2f2, 0x000000, 0x000000, 0xffffff];			var alphas:Array     = [0, 1, 1, 1];			var ratios:Array     = [0, 63, 126, 255];			var blurX:Number     = 10;			var blurY:Number     = 10;			var strength:Number  = 2.5;			var quality:Number   = BitmapFilterQuality.HIGH;			var type:String      = BitmapFilterType.OUTER;			var knockout:Boolean = false;			m_filter = new GradientGlowFilter(distance,                                          angleInDegrees,                                          colors,                                          alphas,                                          ratios,                                          blurX,                                          blurY,                                          strength,                                          quality,                                          type,                                          knockout);		}		public function setWidth( w:Number) {			W = w;			drawBg();		}		public function on() {			drawBg();			filters = [ m_filter];		}		public function off() {			filters = [];		}		function drawBg() {			graphics.clear();			graphics.beginFill( m_color);			graphics.drawRect( 0, 0, W, 0.5);			graphics.endFill();		}	}}