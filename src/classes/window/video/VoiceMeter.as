package window.video {    import flash.display.*;	import flash.geom.*;	    public class VoiceMeter extends Sprite	// ProVideoやメンバーリストサムネイル、クイック一覧のMemberConで使われる	{		private const LINE_W = 1;		private var m_arr:Array;		private var m_offColor:uint;		private var SQ_NYM:uint;				public function VoiceMeter( base_w:Number, base_h:Number, offColor:uint = 0xd8d8d8, square_num:uint = 10) {			SQ_NYM = square_num;			m_offColor = offColor;			graphics.beginFill( 0xffffff);			graphics.drawRect( 0, 0, base_w, base_h);						m_arr = new Array();						var w = ( base_w - SQ_NYM + 1 * LINE_W) / SQ_NYM;			var posi_x = LINE_W;			for( var i = 0; i < SQ_NYM; i++) {				var sq = addChild( new Shape());				sq.graphics.beginFill( m_offColor);				sq.graphics.drawRect( posi_x, LINE_W, w, base_h - ( LINE_W * 2));				m_arr.push( sq);				posi_x += LINE_W + w;			}		}		public function setLevel( lev:Number) :int { // 0〜100			var level = Math.floor(( lev) / 100 * SQ_NYM); // 0〜SQ_NYM			if( level > SQ_NYM) level = SQ_NYM;			if( level < 0) level = 0;			if( level == 0 && lev > 0) level = 1;									var ct = new ColorTransform();			ct.color = 0xa0d55f;			for( var i = 0; i < level; i++) {				m_arr[ i].transform.colorTransform = ct;			}			var ct0 = new ColorTransform();			ct0.color = m_offColor;			for( i = level; i < SQ_NYM; i++) {				m_arr[ i].transform.colorTransform = ct0;			}						return level * 10;			//return lev;		}	}}