package window.video.list.parts {	import flash.display.*;	import flash.text.*;	import flash.events.*;	import flash.net.*;	import window.video.VoiceMeter;		// ピックアップ用の受講生一覧のメンバー表示コンテナ	public class PickupMemberContainer_stu extends PickupMemberContainer {		private const PAD = 8;		private var m_title:TextField = null; // 受講生用		static public const UID_CHANGED:String = "UID_CHANGED";				public function PickupMemberContainer_stu( num:uint) {			super( num);			m_title = TextField( addChild( new TextField()));			m_title.defaultTextFormat = new TextFormat( Main.CONF.getMainFont(), 11);			m_title.selectable = m_title.mouseEnabled = false;			m_title.text = " ";			m_title.x =  m_fpsMeter.x + m_fpsMeter.width + 5;			m_title.y = ( HEADER_H - m_title.textHeight) / 2;			m_title.height = m_title.textHeight + 4;						m_volumeMeter = VoiceMeter( addChild( new VoiceMeter( 125, 15)));		}								override public function init( uid:String) {			super.init( uid);			m_title.text = Main.CONF.getName( uid);			m_fpsMeter.visible = m_absence.visible = uid == Main.CONF.UID ? false : true;						change( uid, true);		}		public function change( newUid:String, b_private:Boolean = false) {			if( !b_private && m_currentUid == newUid) return;						// 画像の入れ替え			//m_loader.unload();			m_currentUid = newUid;						//var memberData = Main.CONF.getMemberDataHash( m_currentUid);//			if( memberData != null)  m_loader.load( new URLRequest( memberData.img));			var memberData = Main.CONF.getMemberDataHash( m_currentUid);			if( memberData != null) m_bitmap.bitmapData = Main.CONF.getMemberImgBmpdata( memberData.img);			else m_bitmap.bitmapData = null;//Main.addDebugMsg("PickupMemberContainer_stu画像の入れ替え uid:" +m_currentUid + " memberData.img:"+memberData.img+" bitmap:"+ m_bitmap.bitmapData);			setLoaderSizePosi();						// 映像の切替			if( m_receive_ns != null) {				stopVideo();				if( m_currentUid != Main.CONF.UID) {					startReceive();				}			}						m_fpsMeter.visible = m_absence.visible = m_currentUid == Main.CONF.UID ? false : true;						m_title.text = Main.CONF.getName( m_currentUid);			if( m_currentUid != Main.CONF.UID) m_title.x = m_fpsMeter.x + m_fpsMeter.width + 5;			else m_title.x = 8;						dispatchEvent( new Event( UID_CHANGED)); 		}								override public function setViewWidth( _w:Number):void {			super.setViewWidth( _w);			m_title.width = _w - m_title.x * 2;						var inner_w = _w - 4;			m_volumeMeter.x = PAD + 1.5;			m_volumeMeter.width = inner_w - PAD * 2;			var footerBaseY = H - 1 - FOOTER_H;			m_volumeMeter.y = footerBaseY + ( FOOTER_H - m_volumeMeter.height) / 2;		}	}}