package window.header {	import flash.display.*;	import flash.text.*;	import flash.events.*;	import flash.geom.*;	import common.*;	import caurina.transitions.*;		public class SystemLogBtn extends Sprite {		private var m_clickObj:Sprite;		private var m_flower;				public function SystemLogBtn( radius:Number) {						m_flower = Sprite( addChild( new Flower()));			changeColor( 0xcc0000);						m_clickObj = Sprite( addChild( new Sprite()));			m_clickObj.graphics.beginFill( 0, 0);			m_clickObj.graphics.drawCircle( 0, 0, radius);			m_clickObj.graphics.endFill();						buttonMode = true;					}				public function changeColor( new_color:uint) {			var ct:ColorTransform = new ColorTransform();			ct.color = new_color;			m_flower.transform.colorTransform = ct;		}	}}