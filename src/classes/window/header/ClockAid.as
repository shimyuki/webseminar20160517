package window.header {	import flash.display.*;	import flash.events.*;	import flash.utils.*;	import flash.text.*;	import flash.display.Shape;	import flash.text.TextField;	import caurina.transitions.*;	public class ClockAid extends Sprite {		static public const LAST_5_MIN = Main.LANG.getReplacedSentence( "%s分前", "5");		static public const LAST_10_MIN = Main.LANG.getReplacedSentence( "%s分前", "10");		static public const W:Number = 40;		static public const H:Number = 20;		private var m_text:TextField;				public function ClockAid() {			var base:Shape = Shape( addChild( new Shape()));			base.graphics.beginFill( 0x666666);			base.graphics.drawRoundRect( 0, 0, W, H, 8);			base.graphics.endFill();						m_text = TextField( addChild( new TextField()));			var fmt:TextFormat = new TextFormat( Main.CONF.getMainFont(), 10, 0xffffff, true);			fmt.align = "center";			m_text.defaultTextFormat = fmt;			m_text.width = W;			m_text.height = H;			m_text.selectable = m_text.mouseEnabled = false;						alpha = 0;		}				public function show( str:String) {			m_text.text = str;			m_text.scaleX = m_text.scaleY = 1;			while( m_text.textWidth > W) {				m_text.scaleX *= 0.9;				m_text.scaleY = m_text.scaleX;			}			m_text.y = ( H - m_text.textHeight - 4) / 2;						alpha = 1;			Tweener.addTween( this, { alpha: 0, transition:"liner", time:1, delay:10});		}	}}